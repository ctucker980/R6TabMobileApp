<?xml version="1.0" encoding="utf-8"?>
<!--Search-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_weight="1"
        android:background="@android:color/background_dark"
        android:contentDescription="@string/r6tablogo"
        app:srcCompat="@drawable/logoimg" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checkedButton="@id/pc_RadioButton"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plateform:"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/pc_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PC"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/xbox_radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xbox"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/psn_radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PSN"
            android:textSize="20dp" />

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>