<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.settings.accountsettings.AccountSettings">

    <ToggleButton
        android:id="@+id/setPlayerId_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Set Player Id"
        android:textOn="Set Player Id" />

    <LinearLayout
        android:id="@+id/setPlayerId_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/setNewUserName_PlainText"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Player Id"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/setUserNameComfirm_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="set" />
    </LinearLayout>

    <Button
        android:id="@+id/changePassword_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password" />

</LinearLayout>